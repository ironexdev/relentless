#!/bin/sh

. bin/docker/env

set -e

echo "ðŸš€ Starting services in dev mode"

# Doing this to remove old vendor folder, and then copy (via bind-mount in compose.yml) new vendor folder from docker container back to localhost
rm -rf vendor
docker compose build
docker compose run --rm --no-deps app composer install

# Launch the stack
docker compose up --wait "$@"
